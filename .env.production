# =============================================================================
# EVERCART E-COMMERCE - PRODUCTION ENVIRONMENT
# =============================================================================
# Production environment configuration for Linux hosting
# Uses relative paths and environment-based configuration

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection (local instance on EC2)
MONGODB_URI=mongodb://localhost:27017/evercart
DB_NAME=evercart

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Admin key for creating admin accounts
ADMIN_KEY=EVERCART_ADMIN_2025

# JWT Secret (change this to a secure random string in production)
JWT_SECRET=aws-production-secret-key-2025-evercart-secure

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allow all origins for now (restrict in production if needed)
CORS_ORIGIN=*

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=public/Assets
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
ENABLE_COMPRESSION=true
DEBUG=false
DETAILED_ERRORS=false
